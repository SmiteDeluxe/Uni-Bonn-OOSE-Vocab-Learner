      <TextField fx:id="AnswerTextField" maxWidth="250.0" prefHeight="30.0" promptText=" Enter Answer"
                 styleClass="bars"/>
      <TextField fx:id="QuestionTextField" maxWidth="250.0" prefHeight="30.0" promptText="Enter Question"
                 styleClass="bars"/>
      <TextField fx:id="LanguageTextField" maxWidth="250.0" prefHeight="30.0" promptText="Enter Language"
                 styleClass="bars"/>
   </VBox>
   <HBox prefHeight="30.0" prefWidth="400.0" styleClass="space" AnchorPane.bottomAnchor="20.0"
         AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
      <Button fx:id="ConfirmButton" mnemonicParsing="false" onAction="#parseNewVoc" prefHeight="25.0"
              prefWidth="130.0" styleClass="classicButton" text="Bestätigen"/>
      <Button fx:id="CancelButton" mnemonicParsing="false" onAction="#closeAddStage" prefHeight="25.0"
              prefWidth="130.0" styleClass="classicButton" text="Abbrechen"/>
   </HBox>
