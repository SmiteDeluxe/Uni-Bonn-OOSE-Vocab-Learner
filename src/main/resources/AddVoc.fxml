<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="277.0"
            prefWidth="400.0" styleClass="mainVocList" stylesheets="@application.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.ControllerVocabAdd">
   <VBox prefHeight="42.0" prefWidth="400.0" AnchorPane.leftAnchor="20.0">
      <Label fx:id="TopLabel" prefHeight="45.0" prefWidth="400.0" text="Vokabeln hinzufügen" styleClass="page"/>
   </VBox>
   <VBox prefHeight="205.0" prefWidth="400.0" styleClass="space" AnchorPane.leftAnchor="20.0"
